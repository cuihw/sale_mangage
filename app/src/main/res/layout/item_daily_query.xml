    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/font2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="当日金额" />

        <TextView
            android:id="@+id/number6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="20" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/font2" />

        <TextView
            android:id="@+id/name7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="当日余款" />

        <TextView
            android:id="@+id/number7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="20" />
    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/font2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="当日发生金额" />

        <TextView
            android:id="@+id/number8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="20" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/font2" />

        <TextView
            android:id="@+id/name9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上报平方" />

        <TextView
            android:id="@+id/number9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="20" />
    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/font2" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/font2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/font3"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:text="备注" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/font2" />

        <TextView
            android:id="@+id/number12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="无备注" />
    </LinearLayout>
</LinearLayout>