<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhongwang.sale.view.LeanTextView
        android:id="@+id/ready_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/scrollview"
        android:gravity="center"
        android:text="已提交"
        android:textColor="@color/redtrans"
        android:textSize="80sp"
        app:degree="20dp" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/init_data">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/init_data"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginRight="50dp"
            android:background="@drawable/background_border1"
            android:orientation="vertical"
            android:padding="5dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_padding"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:paddingRight="@dimen/item_padding"
                        android:text="数量：" />

                    <EditText
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="（必填）请输入数量"
                        android:inputType="number" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:paddingRight="@dimen/item_padding"
                        android:text="单价：" />

                    <EditText
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="（必填）请输入单价"
                        android:inputType="numberDecimal" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:paddingRight="@dimen/item_padding"
                        android:text="回款：" />

                    <EditText
                        android:id="@+id/backmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="请输入回款"
                        android:inputType="numberDecimal" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:paddingRight="@dimen/item_padding"
                        android:text="备注：" />

                    <EditText
                        android:id="@+id/remark_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="请填写备注" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:paddingRight="@dimen/item_padding"
                        android:text="剩余托盘：" />

                    <TextView
                        android:id="@+id/rest_tray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:paddingRight="@dimen/item_padding"
                        android:text="金额：" />

                    <TextView
                        android:id="@+id/total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:paddingRight="@dimen/item_padding"
                        android:text="余款：" />

                    <TextView
                        android:id="@+id/balance_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:paddingRight="@dimen/item_padding"
                        android:text="当日发生：" />

                    <TextView
                        android:id="@+id/current_happen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/commit_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/item_padding"
                android:background="@drawable/semi_circle_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="提         交"
                android:textColor="@color/font4" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>